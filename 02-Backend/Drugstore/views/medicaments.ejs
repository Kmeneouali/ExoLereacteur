<!DOCTYPE html>

<html>
  <head>
    <title>La liste des medicaments</title>
    <style>
      table,
      td {
        border: 1px solid #333;
      }

      thead,
      tfoot {
        background-color: #333;
        color: #fff;
      }
    </style>
  </head>

  <body>
    <table>
      <thead>
        <tr>
          <th colspan="3">La liste des medicaments</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Id</td>
          <td>Name</td>
          <td>Quantity</td>
        </tr>
        <% medicaments.forEach(function(medicament, index) { %>
        <tr>
          <td><%= medicament.id %></td>
          <td><%= medicament.name %></td>
          <td><%= medicament.quantity %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
